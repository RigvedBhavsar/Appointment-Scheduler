@model AppointmentScheduling.Models.ViewModels.RegisterViewModel
<div>
    <h2>Sign Up</h2>
    <div class="row">
        <div class="col-md-6">
            <form method="post" asp-action="Register" asp-controller="Account">
                @if (User.IsInRole(AppointmentScheduling.Utility.Helper.Admin))
                {
        <h4>Register an admin account.</h4> }
                    else
                    {
        <h4>Create a new account.</h4>}
                <hr />
                <div asp-validation-summary="All" class="text-danger small"></div>

                <div class="form-group row">
                    <label class="col-md-4" asp-for="Name"></label>
                    <div class="col-md-8">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-md-4" asp-for="Email"></label>
                    <div class="col-md-8">
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-md-4" asp-for="Password"></label>
                    <div class="col-md-8">
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-md-4" asp-for="ConfirmPassword"></label>
                    <div class="col-md-8">
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-md-4" asp-for="RoleName"></label>
                    <div class="col-md-8">
                        <select asp-for="RoleName" 
                                 asp-items="@AppointmentScheduling.Utility.Helper.GetRolesForDropDown(User.IsInRole(AppointmentScheduling.Utility.Helper.Admin))" 
                                class="form-control"></select>
                        <span asp-validation-for="RoleName" class="text-danger small"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-8 offset-md-7">
                        <input type="submit" value="Sign Up" class="btn btn-primary" />
                    </div>
                </div>
                <p class="col-md-8 offset-md-6">
                    <a asp-action="Login">Already Have Account ? </a>
                </p>

            </form>
        </div>
    </div>
</div>

@* Client Side Validatation *@
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}