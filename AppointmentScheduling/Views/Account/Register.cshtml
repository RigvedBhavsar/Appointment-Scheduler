@model AppointmentScheduling.Models.ViewModels.RegisterViewModel
<div>
    <h2>Sign Up</h2>
    <div class="row">
        <div class="col-md-6">
            <form method="post" asp-action="Register" asp-controller="Account">
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group row">
                    <label class="col-md-4" asp-for="Name"></label>
                    <div class="col-md-8">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-md-4" asp-for="Email"></label>
                    <div class="col-md-8">
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-md-4" asp-for="Password"></label>
                    <div class="col-md-8">
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-md-4" asp-for="ConfirmPassword"></label>
                    <div class="col-md-8">
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ConfirmPassword"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-md-4" asp-for="RoleName"></label>
                    <div class="col-md-8">
                        <input asp-for="RoleName" asp-item="@AppointmentScheduling.Utility.Helper.GetRolesForDropDown()" class="form-control" />
                        <span asp-validation-for="RoleName"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-8 offset-md-7">
                        <input type="submit" value="Sign Up" class="btn btn-primary" />
                    </div>
                </div>
                <p class="col-md-8 offset-md-6">
                    <a asp-action="Login">Already Have Account ? </a>
                </p>

            </form>
        </div>
    </div>
</div>