@* Default implementation of Idendity user comes when you use ASP.Net Identity *@
@inject Microsoft.AspNetCore.Identity.SignInManager<AppointmentScheduling.Models.ApplicationUser> signInManager

@if (signInManager.IsSignedIn(User))
{
    <form method="post" id="logoutForm" asp-action="LogOff" asp-controller="Account">
        <ul class="nav navbar-nav">
            <li class="nav-link" style="color: #ed7d2b">Hello, <b>@User.Identity.Name</b></li>
            <li>
                <a class="nav-link" style="color: #ed7d2b" href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav">
        <li class="nav-item">
            @*@Html.ActionLink("Sign In", "Login" , "Account"  , routeValues:null , htmlAttributes : new { id = "loginLink"})*@
            <a class="nav-link" style="color: #ed7d2b" id="loginLink" asp-controller="Account" asp-action="Login">Login</a>
        </li>
        
        <li>
            @*@Html.ActionLink("Sign Up", "Register" , "Account"  , routeValues:null , htmlAttributes : new { id = "registerLink"})*@        
            <a class="nav-link" style="color: #ed7d2b" id="registerLink" asp-controller="Account" asp-action="Register">Register</a>
        </li>    
    </ul>
}